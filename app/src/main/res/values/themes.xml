<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ulht_blue</item> <!-- Cor do TitleBar -->
        <item name="colorPrimaryDark">@color/white_gray</item> <!-- Cor da barra de Notificações -->
        <item name="colorAccent">@color/ulht_blue</item> <!-- Cor de alguns elementos, como RadioButtons -->
        <item name="android:windowBackground">@color/white_gray</item> <!-- Cor de Background para a App -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:actionMenuTextColor">@color/dark_grey</item>

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ulht_blue</item> <!-- Cor do TitleBar -->
        <item name="colorPrimaryDark">@color/black</item> <!-- Cor da barra de Notificações -->
        <item name="colorAccent">@color/light_blue</item> <!-- Cor de alguns elementos, como RadioButtons -->
        <item name="android:windowBackground">@color/white_gray</item> <!-- Cor de Background para a App -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:actionMenuTextColor">@color/dark_grey</item>
    </style>

    <style name="ToolbarColoredMenu" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>