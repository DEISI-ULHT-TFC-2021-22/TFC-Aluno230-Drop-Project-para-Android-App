<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:elevation="2dp"
    android:translationZ="10dp"
    android:background="@drawable/assignment_card_bg"
    android:padding="15dp"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ic_assignment"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_assignment" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_assignment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/Jan/2021"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_assignment_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/tv_date_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/01/2022 10:00:00"
                android:textSize="14dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_right"
            />
    </LinearLayout>
</LinearLayout>